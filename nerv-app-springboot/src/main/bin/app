#!/bin/bash

WORKSPACE=$(cd $(dirname $0)/; pwd)
cd $WORKSPACE

APP=nerv-app-springboot-1.0
BOOTSTRAP_JAR=$APP.jar
LOG_PATH=../log
PID_FILE=$LOG_PATH/app.pid
LOG_FILE=$LOG_PATH/app.log


function check_pid() {
    if [ -f $PID_FILE ];then
        pid=`cat $PID_FILE`
        if [ -n $pid ]; then
            running=`ps -p $pid|grep -v "PID TTY" |wc -l`
            return $running
        fi
    fi
    return 0
}

function start() {
    check_pid
    running=$?
    if [ $running -gt 0 ];then
        echo -n "$APP: started already, pid="
        cat $PID_FILE
        return 1
    fi

    mkdir -p $LOG_PATH
    nohup java -jar $BOOTSTRAP_JAR &> $LOG_FILE &

    sleep 1
    running=`ps -p $! | grep -v "PID TTY" | wc -l`
    if [ $running -gt 0 ];then
        echo $! > $PID_FILE
        echo "$APP: started, pid=$!"
    else
        echo "$APP: failed"
        return 1
    fi
}

function stop() {
    pid=`cat $PID_FILE`
    kill $pid
    rm -f $PID_FILE
    echo "$APP: stopped"
}

function restart() {
    stop
    sleep 1
    start
}

function status() {
    check_pid
    running=$?
    if [ $running -gt 0 ];then
        echo -n "$APP: started, pid="
        cat $PID_FILE
    else
        echo "$APP: stopped"
    fi
}


function help() {
    echo "start|stop|restart|status"
}

if [ "$1" == "" ]; then
    help
elif [ "$1" == "stop" ];then
    stop
elif [ "$1" == "start" ];then
    start
elif [ "$1" == "restart" ];then
    restart
elif [ "$1" == "status" ];then
    status
else
    help
fi
